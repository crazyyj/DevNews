            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <provider
            android:authorities="AutoInitBrowserProvider"
            android:name=".web.AutoInitBrowserProvider"
            android:exported="false" />
        
    </application>

</manifest>