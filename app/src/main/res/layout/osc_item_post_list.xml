<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPostItemHeaderIcon"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_splash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPostItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="name"
        app:layout_constraintBottom_toTopOf="@id/tvPostItemDesc"
        app:layout_constraintStart_toEndOf="@id/ivPostItemHeaderIcon"
        app:layout_constraintTop_toTopOf="@id/ivPostItemHeaderIcon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPostItemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="miaosu"
        app:layout_constraintBottom_toBottomOf="@id/ivPostItemHeaderIcon"
        app:layout_constraintStart_toEndOf="@id/ivPostItemHeaderIcon"
        app:layout_constraintStart_toStartOf="@id/tvPostItemName"
        app:layout_constraintTop_toBottomOf="@id/tvPostItemName" />

</androidx.constraintlayout.widget.ConstraintLayout>